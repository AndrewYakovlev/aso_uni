# База данных
DATABASE_URL="postgresql://postgres:true!false@localhost:5432/aso_db?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT секреты
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-jwt-key-change-in-production"

# Настройки приложения
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_API_URL="http://localhost:3000/api/v1"

# SMS.ru API (заменить на реальные данные)
SMS_RU_API_ID="your-sms-ru-api-id"
SMS_RU_TEST_MODE="1" # 1 для тестового режима

# Настройки сессий
SESSION_COOKIE_NAME="aso-session"
SESSION_COOKIE_MAX_AGE="2592000" # 30 дней в секундах

# Настройки безопасности
BCRYPT_ROUNDS="10"

# Режим разработки
NODE_ENV="development"

# Логирование
LOG_LEVEL="debug"